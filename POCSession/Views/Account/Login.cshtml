
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <h2>Login</h2>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("Username", new { @class = "control-label" })
            @Html.TextBox("username", null, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            @Html.Label("Password", new { @class = "control-label" })
            @Html.Password("password", null, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    }
</body>
</html>
